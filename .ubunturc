export CUDA_HOME=/usr/local/cuda
export DYLD_LIBRARY_PATH="$DYLD_LIBRARY_PATH:$CUDA_HOME/lib"
export LD_LIBRARY_PATH="$DYLD_LIBRARY_PATH"
export PATH="$CUDA_HOME/bin:$PATH"

alias open="xdg-open"
export PATH="$PATH:/home/share/miniconda3/bin"

export PATH="$PATH:/home/rasmus/.local/bin"

REPO=/home/share/software/ai_ikkuna/

torchmux () {
    cd $REPO
    tmux new-session -ds th-edit
    tmux send-keys -t th-edit "source activate torch" Enter
    tmux new-session -ds th-run
    tmux send-keys -t th-run "source activate torch" Enter
    tmux new-session -ds th-jupyter
    tmux send-keys -t th-jupyter "source activate torch" Enter
    tmux send-keys -t th-jupyter "jupyter notebook --no-browser --port 9999" Enter
    tmux new-session -ds th-ipython
    tmux send-keys -t th-ipython "source activate torch" Enter
    tmux send-keys -t th-ipython "ipython" Enter
    tmux new-session -ds th-monitor
    tmux split-window -v
    tmux send-keys -t th-monitor:0.0 "watch --color -n1.0 gpustat --color" Enter
    tmux send-keys -t th-monitor:0.1 "htop" Enter
}

alias open="xdg-open"

export CCACHE_DIR=/local/.ccache
export TERM=xterm-256color
