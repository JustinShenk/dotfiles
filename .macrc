export PATH=/usr/local/bin:/opt/local/libexec/gnubin/:/opt/local/bin/:$PATH
export PATH="/usr/local/sbin:$PATH "
# these paths need to be added to the front so that the GNU utilities like find,
# sed etc can be used with their regular name, without prefixing a g (gfind,
# gsed...)
export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"    # homebrew gnu utils
export PATH="/usr/local/opt/findutils/libexec/gnubin:$PATH"
export PATH="/usr/local/opt/gnu-tar/libexec/gnubin:$PATH"
export PATH="/usr/local/opt/gnu-sed/libexec/gnubin:$PATH"
export PATH="/usr/local/opt/grep/libexec/gnubin:$PATH"
export PATH="/usr/local/opt/curl/bin:$PATH"
export PATH="/usr/local/opt/make/libexec/gnubin:$PATH"
export PATH="/usr/local/opt/ccache/libexec:$PATH"

# Change to current Finder directory
cdf() {
    target=`osascript -e 'tell application "Finder" to if (count of Finder windows) > 0 then get POSIX path of (target of front Finder window as text)'`
    if [ "$target" != "" ]; then
        cd "$target"; pwd
    else
        echo 'No Finder window found' >&2
    fi
}

# bash-completion
if [ -f /opt/local/etc/profile.d/bash_completion.sh ]; then
    . /opt/local/etc/profile.d/bash_completion.sh
fi
export SHELL=$BASH

PROJDIR=$HOME/Documents/Psiori/Projects/AutoCrane
cranemux() {
    cd $PROJDIR/autocrane-core
    tmux new-session -ds 0-edit
    tmux new-session -ds 1-run
    tmux new-session -ds 2-simulator
    tmux new-session -ds 3-misc

    tmux send-keys -t 2-simulator "source $PROJDIR/autocrane-bulletsim/bulletsim.venv/bin/activate" Enter
    tmux send-keys -t 2-simulator "cd $PROJDIR/autocrane-bulletsim" Enter
}

